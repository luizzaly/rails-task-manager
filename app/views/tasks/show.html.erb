<h1><%= @task.title %></h1>
 <p><%= @task.details %></p>
 <% if @task.completed  %>
 <input type="checkbox" checked>
 <% else  %>
 <input type="checkbox">
 <% end %>
<br>
<%= link_to "back to all tasks", tasks_path %>
<br>
<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
